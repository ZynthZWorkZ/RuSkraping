<Window x:Class="RuSkraping.TorrentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuSkraping"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Torrent Details" Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        BorderThickness="0"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1E1E2D"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#2B2B3F"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#6C5DD3"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#FF4B4B"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#50CD89"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A1A5B7"/>

        <LinearGradientBrush x:Key="WindowBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1E1E2D" Offset="0"/>
            <GradientStop Color="#151521" Offset="1"/>
        </LinearGradientBrush>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="{StaticResource WindowBackgroundGradient}" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="16,16,0,0" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <fa:FontAwesome Icon="InfoCircle" Foreground="{StaticResource AccentBrush}" FontSize="24" Margin="0,0,15,0"/>
                        <TextBlock x:Name="TitleText" Text="Torrent Metadata Details" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>

                    <Button x:Name="CloseButton" Click="CloseButton_Click" Width="40" Height="40" HorizontalAlignment="Right" Margin="0,10">
                        <fa:FontAwesome Icon="Close" Foreground="{StaticResource DangerBrush}"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Margin="30" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Info Hash -->
                    <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="INFO HASH" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            <TextBlock x:Name="InfoHashText" FontFamily="Consolas" FontSize="14" Foreground="{StaticResource SuccessBrush}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Basic Info -->
                    <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="NameText" Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Size:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TotalSizeText" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Files:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="FileCountText" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Save Path:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="SavePathText" Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Added:" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="AddedDateText" Foreground="{StaticResource TextPrimaryBrush}"/>
                        </Grid>
                    </Border>

                    <!-- Files List -->
                    <Border Background="{StaticResource SecondaryBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="FILES" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,15"/>
                            <ListView x:Name="FilesListView" Background="Transparent" BorderThickness="0" MaxHeight="300">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="120"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Path}" Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Grid.Column="1" Text="{Binding SizeFormatted}" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>

                    <!-- Copy Button -->
                    <Button x:Name="CopyHashButton" Click="CopyHashButton_Click" HorizontalAlignment="Center" Padding="20,10">
                        <StackPanel Orientation="Horizontal">
                            <fa:FontAwesome Icon="Copy" Margin="0,0,8,0"/>
                            <TextBlock Text="Copy Info Hash to Clipboard"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
