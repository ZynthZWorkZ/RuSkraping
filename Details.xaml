<Window x:Class="RuSkraping.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RuSkraping"
        mc:Ignorable="d"
        Title="Details" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A"
        BorderBrush="#e9182b"
        BorderThickness="1"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border CornerRadius="16" Background="#1A1A1A" BorderBrush="#e9182b" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#121212" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Torrent Details" FontSize="20" FontWeight="Bold" Foreground="#e9182b" Margin="20,10" VerticalAlignment="Center"/>
                <Button x:Name="TranslateButton" Click="TranslateButton_Click" Width="30" Height="30" Margin="10,0" Grid.Column="1">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#e9182b"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e9182b"/>
                                    <Setter Property="Foreground" Value="#121212"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="🌐" FontSize="16"/>
                </Button>
                <Button x:Name="CloseButton" Click="CloseButton_Click" Width="30" Height="30" HorizontalAlignment="Right" Margin="10,0" Grid.Column="2">
                     <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#e9182b"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e9182b"/>
                                    <Setter Property="Foreground" Value="#121212"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                     </Button.Style>
                    <TextBlock Text="X" FontWeight="Bold"/>
                </Button>
            </Grid>

            <!-- Details Content -->
            <ScrollViewer Grid.Row="1" Margin="20">
                <TextBlock x:Name="DetailsTextBlock" Foreground="#CCCCCC" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window> 